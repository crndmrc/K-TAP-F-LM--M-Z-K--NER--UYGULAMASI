<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/yenirenk3"
    android:layout_marginTop="@dimen/yetmisdp">
    <TextView
        android:id="@+id/txtbaslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Başlık"
        android:gravity="center"
        android:layout_marginTop="@dimen/kirkbesdp"
        android:background="@color/yenirenk2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/yirmidp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:paddingTop="@dimen/yirmibesdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ikiyuzatmisyedidp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="@dimen/yuzellidp"
            android:layout_height="@dimen/yuzondp"
            android:layout_marginTop="@dimen/ellidp"
            android:layout_marginBottom="@dimen/ellidp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ucyuzotuzdortdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ellibesdp">

                <TextView
                    android:id="@+id/txtoffertipi"
                    android:layout_width="@dimen/yetmisbesdp"
                    android:layout_height="@dimen/otuzucdp"
                    android:paddingLeft="@dimen/yirmidp"
                    android:layout_weight="50"
                    android:text="@string/offer_tipi"
                    android:background="@drawable/border5"
                    android:maxLines="4"
                    android:lines="4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtoffertipi2"
                    android:layout_width="@dimen/ellidp"
                    android:layout_height="@dimen/otuzucdp"
                    android:background="@drawable/border3"
                    />
                <TextView
                    android:id="@+id/txttur"
                    android:text="@string/tur"
                    android:layout_weight="25"
                    android:paddingLeft="@dimen/ondp"
                    android:background="@drawable/border5"
                    android:textStyle="bold"
                    android:layout_width="@dimen/yetmisbesdp"
                    android:layout_height="@dimen/otuzucdp"/>
                <TextView
                    android:id="@+id/txttur2"
                    android:background="@drawable/border4"
                    android:layout_width="@dimen/altmis"
                    android:layout_height="@dimen/otuzucdp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/otuzdp">
                <TextView
                    android:id="@+id/txtfilm"
                    android:text="film:"
                    android:background="@drawable/border5"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/ondp"
                    android:layout_width="@dimen/kirkdp"
                    android:layout_height="@dimen/otuzdp"
                    />
                <TextView
                    android:id="@+id/txtfilm2"
                    android:background="@drawable/border4"
                    android:layout_width="@dimen/ellidp"
                    android:layout_height="@dimen/otuzdp"
                    />
                <TextView
                    android:id="@+id/txtkitap"
                    android:textStyle="bold"
                    android:layout_width="@dimen/yirmidp"
                    android:layout_height="@dimen/otuzdp"
                    android:text="@string/kitap"
                    android:background="@drawable/border5"
                    />
                <TextView
                    android:id="@+id/txtkitap2"
                    android:layout_width="@dimen/ellidp"
                    android:layout_height="@dimen/otuzdp"
                    android:background="@drawable/border4"
                    />
                <TextView
                    android:id="@+id/txtFiyat"
                    android:layout_width="@dimen/otuzucdp"
                    android:layout_height="@dimen/otuzdp"
                    android:text="@string/fiyat"
                    android:background="@drawable/border5"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/txtFiyat2"
                    android:layout_width="@dimen/ellidp"
                    android:layout_height="@dimen/otuzdp"
                    android:text="@string/fiyat"
                    android:background="@drawable/border4"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:id="@+id/txtTL"
                    android:layout_width="@dimen/otuzdp"
                    android:layout_height="@dimen/otuzdp"
                    android:text="@string/tl" />
            </LinearLayout>
            <TextView
                android:id="@+id/knot"
                android:layout_marginTop="10dp"
                android:background="@drawable/border3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ellidp"
                android:paddingLeft="@dimen/ondp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
